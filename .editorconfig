# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.md]
trim_trailing_whitespace = true

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.jsx]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.sass]
indent_size = 2

[*.less]
indent_size = 2

[*.graphql]
indent_size = 2

[*.mdx]
indent_size = 2

[*.yaml]
indent_size = 2

[*.toml]
indent_size = 2

[*.xml]
indent_size = 2

[*.php]
indent_size = 2

[*.py]
indent_size = 4
